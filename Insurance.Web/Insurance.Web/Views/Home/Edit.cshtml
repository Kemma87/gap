@model Insurance.Web.Models.InsuranceNewEditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h1 class="display-4">Edit Insurance</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreationDate" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverPeriod" class="control-label"></label>
                <input asp-for="CoverPeriod" class="form-control" />
                <span asp-validation-for="CoverPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RiskTypeId" class="control-label">Risk Type</label>
                <select asp-for="RiskTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.RiskTypes, "Id","Name"))"></select>
                <span asp-validation-for="RiskTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverTypeId" class="control-label">Cover Type</label>
                <select asp-for="CoverTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.CoverTypes, "Id","Name"))"></select>
                <span asp-validation-for="CoverTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label">Location</label>
                <select asp-for="LocationId" class="form-control" asp-items="@(new SelectList(ViewBag.Locations, "Id","Name"))"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserCreate" class="control-label">User Who Created</label>
                <input asp-for="UserCreate" class="form-control" readonly />
                <span asp-validation-for="UserCreate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
