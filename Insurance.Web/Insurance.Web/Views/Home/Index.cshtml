@model List<Insurance.Web.Models.InsuranceModel>
@{
    ViewData["Title"] = "Home";
}

<div>
    <h1 class="display-4">Insurances</h1>
    <hr />
    <a class="btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="LoadAddData">Add Insurance</a>
    <hr />
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Start</th>
                    <th scope="col">Cost</th>
                    <th scope="col">Cover Period</th>
                    <th scope="col">Risk</th>
                    <th scope="col">Country</th>
                    <th scope="col">Cover Type</th>
                    <th scope="col">Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var insurance in Model)
                {
                    <tr>
                        <td>
                            <span>@insurance.Id</span>
                        </td>
                        <td>
                            <span>@insurance.Name</span>
                        </td>
                        <td>
                            <span>@insurance.Description</span>
                        </td>
                        <td>
                            <span>@insurance.Start.ToString("dd/MM/yyyy")</span>
                        </td>
                        <td>
                            <span>@insurance.Cost</span>
                        </td>
                        <td>
                            <span>@insurance.CoverPeriod</span>
                        </td>
                        <td>
                            <span>@insurance.RiskType.Name</span>
                        </td>
                        <td>
                            <span>@insurance.Location.Country.Name</span>
                        </td>
                        <td>
                            <span>@insurance.CoverType.Name</span>
                        </td>
                        <td>
                            <span>@insurance.CreationDate.ToString("dd/MM/yyyy")</span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LoadEditData" asp-route-id="@insurance.Id">Edit</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Delete" asp-route-id="@insurance.Id">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4>No insurances found</h4>
    }
</div>
